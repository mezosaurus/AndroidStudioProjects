<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:id="@+id/areaCardActionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView android:id="@+id/areaCardActionText"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:gravity="center"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView android:id="@+id/greenCardDraw"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="DRAW\nGREEN\nCARD"
                android:gravity="center"
                android:background="@color/green"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <TextView android:id="@+id/blackCardDraw"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="DRAW\nBLACK\nCARD"
                android:gravity="center"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:visibility="invisible"/>
            <TextView android:id="@+id/whiteCardDraw"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="DRAW\nWHITE\nCARD"
                android:gravity="center"
                android:background="@drawable/rectangle"
                android:layout_weight="1"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/weirdWoodsBtns"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="invisible">
            <Button android:id="@+id/weirdWoodsHealBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Heal"/>
            <Button android:id="@+id/weirdWoodsDmgBtn"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Damage"/>

        </LinearLayout>


    </LinearLayout>

    </ScrollView>

</LinearLayout>