<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs4962.shadowhunters.GameBoardActivity"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/damageBoardRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardDrawLayout"
        android:orientation="horizontal">

        <LinearLayout android:id="@+id/damageLinearLayout"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAMAGE"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/boardLinearLayout"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
            <LinearLayout android:id="@+id/boardGroupOne"
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:orientation="horizontal"
                android:layout_weight="1">
            </LinearLayout>
            <LinearLayout android:id="@+id/boardGroupTwo"
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:orientation="horizontal"
                android:layout_weight="1">
            </LinearLayout>
            <LinearLayout android:id="@+id/boardGroupThree"
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:orientation="horizontal"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/cardDrawLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_weight="2"
        android:layout_above="@+id/boardPlayersListButton">
        <TextView android:id="@+id/greenCardDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRAW\nGREEN\nCARD"
            android:gravity="center"
            android:background="@color/green"
            android:layout_weight="1"/>
        <TextView android:id="@+id/blackCardDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRAW\nBLACK\nCARD"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_weight="1"/>
        <TextView android:id="@+id/whiteCardDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRAW\nWHITE\nCARD"
            android:gravity="center"
            android:background="@drawable/rectangle"
            android:layout_weight="1"/>
        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boardPlayersListButton"
        android:layout_gravity="center"
        android:text="Players"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
